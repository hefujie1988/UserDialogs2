<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks></TargetFrameworks>
		<TargetFrameworks Condition=" '$(OS)' == 'Windows_NT' ">netstandard2.0;MonoAndroid80;Xamarin.iOS10;</TargetFrameworks>
		<TargetFrameworks Condition=" '$(OS)' != 'Windows_NT' ">netstandard2.0;MonoAndroid80;Xamarin.iOS10</TargetFrameworks>
		<SignAssembly>true</SignAssembly>
		<AssemblyName>Passingwind.UserDialogs</AssemblyName>
		<RootNamespace>Passingwind.UserDialogs</RootNamespace>

		<EnableDefaultCompileItems>false</EnableDefaultCompileItems>

		<GenerateAssemblyInfo>true</GenerateAssemblyInfo>

		<Version>1.0.0</Version>

		<AssemblyVersion>1.0.0.0</AssemblyVersion>
	</PropertyGroup>


	<PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
		<ProduceReferenceAssembly>True</ProduceReferenceAssembly>
		<DefineConstants>$(DefineConstants);NETSTANDARD;BAIT</DefineConstants>
		<Product>Passingwind.UserDialogs - .NET Standard 2</Product>
	</PropertyGroup>

	<PropertyGroup Condition=" '$(TargetFramework)' == 'MonoAndroid70' OR  '$(TargetFramework)' == 'MonoAndroid80' ">
		<DefineConstants>$(DefineConstants);__ANDROID__</DefineConstants>
		<Product>Passingwind.UserDialogs - Android</Product>
		<!--<AndroidSupportedAbis>armeabi;x86</AndroidSupportedAbis>-->
	</PropertyGroup>

	<PropertyGroup Condition=" '$(TargetFramework)' == 'Xamarin.iOS10' ">
		<DefineConstants>$(DefineConstants);__IOS__</DefineConstants>
		<Product>Passingwind.UserDialogs - iOS</Product>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="MSBuild.Sdk.Extras" Version="1.4.0" PrivateAssets="All" />
	</ItemGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|netstandard2.0|AnyCPU'">
		<DocumentationFile />
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="*.cs" />
		<Compile Include="Alert\*.cs" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
		<Compile Include="Shared\**\*.cs" />
		<PackageReference Include="Xamarin.Forms" Version="3.1.0.697729" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'MonoAndroid80'">
		<Compile Include="Shared\**\*.cs" />
		<Compile Include="Android\**\*.cs" />
		<PackageReference Include="KProgressHUD.csharp" Version="1.2.1" />
		<PackageReference Include="Xamarin.Android.Support.Design" Version="26.1.0.1" />
		<PackageReference Include="Xamarin.Android.Support.Core.Utils" Version="26.1.0.1" />
		<PackageReference Include="Xamarin.Android.Support.v7.AppCompat" Version="26.1.0.1" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'Xamarin.iOS10'">
		<Compile Include="Shared\**\*.cs" />
		<Compile Include="iOS\**\*.cs" />
		<Reference Include="OpenTK-1.0" />
		<PackageReference Include="SVProgressHUD" Version="2.2.5" />
	</ItemGroup>

	<Import Project="$(MSBuildSDKExtrasTargets)" Condition="Exists('$(MSBuildSDKExtrasTargets)')" />

</Project>
